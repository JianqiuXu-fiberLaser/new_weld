                          FontFamily="Microsoft YaHei UI" FontSize="16" Padding="5,6,0,0"
                          ItemsSource="{Binding Source={StaticResource vanetype}}"
                          SelectedIndex="{Binding Path=VaneIndex}"
                          DisplayMemberPath="Name" DropDownOpened="VaneType_DropDownOpened"  />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                        Margin="0,0,150,0">
